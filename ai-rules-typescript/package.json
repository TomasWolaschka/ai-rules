{
  "name": "ai-rules-typescript",
  "version": "1.0.0",
  "description": "Autonomous AI rule management system with TypeScript and MCP integration",
  "type": "module",
  "main": "dist/rule-management-server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/rule-management-server.ts",
    "start": "node dist/rule-management-server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t ai-rules-management .",
    "docker:run": "docker run -p 3000:3000 ai-rules-management",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "rules",
    "management",
    "mcp",
    "typescript",
    "automation"
  ],
  "author": "AI Rules Management System",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.5.2",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}